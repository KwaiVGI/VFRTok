{
    "gradient_accumulation_steps": 1,
    "train_micro_batch_size_per_gpu": 8,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 1e-4,
            "betas": [0.9, 0.95],
            "eps": 1e-8,
            "weight_decay": 1e-4
        }
    },
    "scheduler": {
        "type": "WarmupCosineLR",
        "params": {
            "cos_min_ratio": 1e-4,
            "warmup_num_steps": 0
        }
    },
    "fp16": {
        "enabled": false
    },
    "bf16": {
        "enabled": true
    },
    "zero_optimization": {
        "stage": 1,
        "allgather_bucket_size": 2e8,
        "reduce_bucket_size": 2e8,
        "overlap_comm": false,
        "contiguous_gradients": true
    },
    "gradient_clipping": 1.0,
    "steps_per_print": 50,
    "wall_clock_breakdown": false
}